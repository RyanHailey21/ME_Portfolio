---
import { Image } from 'astro:assets';
import type { ImageFunction } from 'astro:content';

export interface Props {
  title: string;
  description: string;
  image: ImageFunction;
  tags: string[];
  slug: string;
}

const { title, description, image, tags, slug } = Astro.props;
---

<a href={slug} class="block group">
  <article class="bg-dark-card rounded-lg overflow-hidden shadow-lg transition-transform duration-300 group-hover:-translate-y-2">
    <img src={image.src} alt={title} class="w-full h-48 object-cover" />
    <div class="p-6">
      <h3 class="text-xl font-semibold mb-2 text-gray-100">{title}</h3>
      <p class="text-gray-300 mb-4 line-clamp-2">{description}</p>
      <div class="flex flex-wrap gap-2">
        {tags.map((tag) => (
          <span class="px-3 py-1 text-sm rounded-full bg-gradient-portfolio text-white">{tag}</span>
        ))}
      </div>
    </div>
  </article>
</a>